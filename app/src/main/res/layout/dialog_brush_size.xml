<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageButton
        android:id="@+id/ib_small_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/small"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ib_medium_size"/>
<!--
    notice that we say on constraintTop that under this imagebutton we have medium brush
-->
    <ImageButton
        android:id="@+id/ib_medium_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/medium"
        app:layout_constraintTop_toBottomOf="@id/ib_small_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ib_big_size"/>
    <ImageButton
        android:id="@+id/ib_big_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/big"
        app:layout_constraintTop_toBottomOf="@+id/ib_medium_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <!--the bottom of this must be connect to bottom of the parent
    the top of this must be attach to bottom of the medium-->
    <!--the first describe the position of current view
    constraint bottom means the bottom of current view is for instnace tobottomOf parrent-->


</androidx.constraintlayout.widget.ConstraintLayout>